/* pages/details/details.wxss */
page{
    background: #F2F5F5;
}
.header-view{
    padding:30rpx 40rpx;
}
.lef-sty{
    border-left: 3px solid #2BBFD6;
    padding-left:20rpx;
}
.container{
    width: 94%;
    margin: auto;
    padding-bottom: 100rpx;
}
.content-left{
    -webkit-box-flex: 2;
    -ms-flex: 2;
    flex: 2;
    color:#666;
}
.header-body{
    background: #fff;
    border-radius: 8rpx;
    padding-bottom:6rpx;
}
.content-right{
    -webkit-box-flex: 5.5;
    -ms-flex: 5.5;
    flex: 5.5;
    color: #333;
    text-align: right;
}
.content-item{
    border-bottom: 1px solid #F2F2F2;
    padding:35rpx 0;
    width: 92%;
    margin: auto;
}
.phone-icon{
    width: 30rpx;
    height: 30rpx;
    vertical-align: middle;
    margin-right: 6rpx;
}
.content-phone{
    padding:20rpx 0px;
    border-top: 1px dashed #F2F2F2;
}
.placeClass{
    border: 1px solid #FF6490;
    font-weight: 600;
    font-size: 30px;
}
.goods-img{
   /* width: 80rpx;
    height: 80rpx;*/
    width: 100%;
    border-radius: 8rpx;
}
.no-goods-img{
    width: 50%;
    margin: auto;
    text-align: center;
    position: absolute;
    left:0px;
    right:0px;
    bottom:0px;
    top:0px;
}
.goods-left{
    -webkit-box-flex: 2;
    -ms-flex: 2;
    flex: 2;
    margin-right: 20rpx;
    position: relative;
    border-radius: 8rpx;
}
.goods-right{
    -webkit-box-flex: 5.5;
    -ms-flex: 5.5;
    flex: 5.5;
    color: #333;
}
.unit-price-text{
    margin-left: 40rpx;
}
.goods-title,.goods-num,.unit-price{
    color: #333;
}
.goods-title{
    font-size: 34rpx;
}
.goods-des{
    color: #999;
    margin:14rpx 0px;
}
.goods-sum-view{
    color: #999;
}
.goods-sum{
    color: #cf021a;
}
.take-order-view{
    color: #fff;
    padding:30rpx 0px;
    width: 100%;
    font-size: 34rpx;
}
.container-footer{
    position: fixed;
    bottom: 0px;
    left: 0px;
    width: 100%;
}
.content-note{
    border-radius: 8rpx;
    background: #F0F0F0;
    padding: 30rpx;
    width: 84%;
    margin:20rpx auto 25rpx;

}
.note-title-view{
    margin-right: 20rpx;
    min-width: 66rpx;
}
.note-title{
    border:1px solid #FF6490;
    padding:2rpx 5rpx;
    color:#FF6490;
    font-size: 26rpx;
}