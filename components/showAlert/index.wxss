/* components/showAlert/index.wxss */
.show-layer{
    position: relative;
    top:0;
    left:0;
    width:100%;
    height:100%;
    z-index:29;
}
.show-body{
    width: auto;
    border-radius:10rpx;
    font-size:32rpx;
    color:#333;
    position:fixed;
    left:7%;
    opacity:1;
    overflow:auto;
    right:7%;
    top:50%;
    transform:translate3d(0px, -50%, 0px) scale(1);
    transition:transform 0.3s ease-in-out 0s, opacity 0.3s ease-in-out 0s, -webkit-transform 0.3s ease-in-out 0s;
}