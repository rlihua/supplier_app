/* components/showAlert/index.wxss */
.show-content{
    position: fixed;
    top:0px;
    left: 0px;
    width: 100%;
    height: 100%;
    z-index: 23;
}
.show-layer{
    position: relative;
    top:0;
    left:0;
    width:100%;
    height:100%;
    z-index:29;
    background: rgba(0,0,0,.6);
}
.show-body{
    width: auto;
    border-radius:10rpx;
    font-size:32rpx;
    color:#333;
    position:fixed;
    left:12%;
    opacity:1;
    overflow:auto;
    right:12%;
    top:50%;
    transform:translate3d(0px, -50%, 0px) scale(1);
    transition:transform 0.3s ease-in-out 0s, opacity 0.3s ease-in-out 0s, -webkit-transform 0.3s ease-in-out 0s;
    background: #fff;
}
.show-icon-img{
    width: 80rpx;
    padding:40rpx 0rpx 0rpx;
}
.show-close,.show-ensure{
    -webkit-box-flex:  1;
    -ms-flex:  1;
    flex:  1;
    padding:40rpx 0rpx;
}
.show-title{
    padding:25rpx 0rpx 40rpx;
}
.show-footer{
    border-top:1px solid #eee;
}
.show-close{
    border-right: 1px solid #eee;
}