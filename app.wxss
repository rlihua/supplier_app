    margin-right: 10rpx;
}
.margin-right-20{
    margin-right: 20rpx;
}
.margin-left-10{
    margin-left: 10rpx;
}
.margin-left-20{
    margin-left: 20rpx;
}
.dis_inline-block{
    display: inline-block;
}